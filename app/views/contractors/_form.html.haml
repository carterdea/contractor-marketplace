= form_for(@contractor) do |f|
  = render 'shared/errors', object: @contractor
  .form-group
    = f.label :business_name
    = f.text_field :business_name, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :city
    = f.text_field :city, class: 'form-control'
  = f.submit 'Create my Contractor Profile', class: 'btn btn-primary'